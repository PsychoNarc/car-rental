<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="card" style="width: 18rem; margin-top: 3rem;">
                <img src="{{car.picture}}" class="card-img-top" alt="...">
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card-body">
                <h5 class="card-title">{{car.make}}</h5>
                <p class="card-text">Model: {{car.model}}, Year: {{car.year}}</p>
                <p class="card-text">Rates:<br> Rs.{{car.pricePerHour}} per hour.<br>Rs.{{car.pricePerWeek}} per week.
                </p>
                <small>Location: {{car.location}}</small>
            </div>
            <div>
                <a href="/contactOwner/{{car.owner}}"><button class="btn btn-info btn-1">Contact Owner</button></a>
                <a href="/rentCar/{{car._id}}"><button class="btn btn-danger btn-1">Rent Now</button></a>
            </div>
        </div>
    </div>
</div>